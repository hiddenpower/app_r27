<div class="transbox2">
  <div class='opacity3'></div>
  <div class='header'>
    <h2>Listing clients</h2>
  </div>
  <div class='opacity4'></div>
  <div class="body">
    <table>
      <tr>
      <th><%= sortable "Service Order" %></th>
      <th><%= sortable "name" %></th>
      <th><%= sortable "last_name" %></th>
      <th><%= sortable "email" %></th>
      <th><%= sortable "phone" %></th>
      <th><%= sortable "depto" %></th>
      <th><%= sortable "status" %></th>
      <th><%= sortable "date" %></th>
      <th></th>
      <th></th>
      <th></th>
      </tr>

      <% @clients.each do |client| %>
      <tr>
      <td><%= client.id %></td>
      <td><%= client.name %></td>
      <td><%= client.last_name %></td>
      <td><%= client.email %></td>
      <td><%= client.phone %></td>
      <td><%= client.depto %></td>
      <td><%= client.status %></td>
      <td><%= client.created_at.strftime("%d-%m-%Y") %></td>

      <td><%= link_to 'Show', client , class: "btn btn-small btn-inverse"%></td>
      <td><%= link_to 'Edit', edit_client_path(client), class: "btn btn-small btn-inverse" %></td>
      <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-inverse" %></td>
      </tr>
      <% end %>
    </table> <br />

  <%#= link_to 'New Admin', clients_new_admin_path, class: "btn btn-inverse btn-index" %>
  <%= link_to 'Admins', admins_path, class: "btn btn-inverse btn-index" %>
  </div>
</div>